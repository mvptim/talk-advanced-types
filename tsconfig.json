{
  "compilerOptions": {
    "module": "system",
    "target": "es6",
    "listFiles": true,
    "outDir": "./bin/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true
  },
  "include": [
    "./src/**/*"
  ],
  "compileOnSave": true
}